{
    "manifest_version": 2,

    "name": "Notes App -- Chrome Extension",
    "description": "This extension displays notes you have taken with the Notes App",
    "version": "0.0.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Notes"
    },

    "background": {
        "scripts": ["jquery-3.1.1.min.js", "popup.js"]
    },

    "content_scripts": [ 
        {
            "js": [ "jquery-3.1.1.min.js", "popup.js" ],
            "matches": [ "http://*/*", "https://*/*"]
        }
    ],

    "permissions": [
        "activeTab", "https://ajax.googleapis.com/"
    ]
    
    
}